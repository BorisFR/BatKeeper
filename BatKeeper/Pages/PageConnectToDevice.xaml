<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BatKeeper.PageConnectToDevice">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0, 40, 0, 0" Android="0" WinPhone="0" />
	</ContentPage.Padding>	
	<ContentPage.Content>
		<StackLayout Margin="0" Padding="0">
			<Label Text="BatKeeper" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
			<Label x:Name="lDevice" Text="Connecting to xxx" FontSize="16" FontAttributes="Bold" HorizontalOptions="Start" />
			<Label Text="Enter the code you see on MASTER device:" FontSize="14" HorizontalOptions="Start" />
			<Entry x:Name="eCode" Placeholder="code" IsPassword="false" />
			<Button x:Name="btOk" Text="Validate" BackgroundColor="#eee" BorderRadius="12" BorderColor="#000000" BorderWidth="1" Margin="12,0,12,30" />
			<Label x:Name="lState" Text="Connecting ..." HorizontalOptions="Center" />
			<Button x:Name="btCancel" Text="Choose another device" BackgroundColor="#eee" BorderRadius="12" BorderColor="#000000" BorderWidth="1" Margin="12,0,12,30" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
